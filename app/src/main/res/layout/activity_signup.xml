<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_login_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_register_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/LoginImgHeight"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_logo"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_16"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_4"
                        android:orientation="horizontal">

                        <com.bluemortar.customui.CustomEditText
                            android:id="@+id/et_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/padding_4"
                            android:hint="@string/RegisterUserTextName"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/RegisterEditTextPadding"
                            android:textColor="@color/LoginHintColor"
                            android:textColorHint="@color/LoginHintColor"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_small"
                        android:background="@color/colorGreyDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_4"
                        android:orientation="horizontal">

                        <com.bluemortar.customui.CustomEditText
                            android:id="@+id/et_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/padding_4"
                            android:hint="@string/RegisterPasswordTextName"
                            android:inputType="textPassword"
                            android:padding="@dimen/RegisterEditTextPadding"
                            android:textColor="@color/LoginHintColor"
                            android:textColorHint="@color/LoginHintColor"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_small"
                        android:background="@color/colorGreyDivider" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_4"
                        android:orientation="vertical">

                        <com.bluemortar.customui.CustomEditText
                            android:id="@+id/et_register_confirm_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/padding_4"
                            android:hint="@string/RegisterConfirmPasswordTextName"
                            android:inputType="textPassword"
                            android:padding="@dimen/RegisterEditTextPadding"
                            android:textColor="@color/LoginHintColor"
                            android:textColorHint="@color/LoginHintColor"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_small"
                        android:background="@color/colorGreyDivider" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/et_register_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/padding_4"
                            android:drawableRight="@drawable/ic_dropdown"
                            android:hint="@string/RegisterCountry"
                            android:padding="@dimen/RegisterEditTextPadding"
                            android:textColor="@color/LoginHintColor"
                            android:textColorHint="@color/LoginHintColor"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_small"
                        android:background="@color/colorGreyDivider" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/et_register_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/padding_4"
                            android:drawableRight="@drawable/ic_dropdown"
                            android:hint="@string/RegisterState"

                            android:padding="@dimen/RegisterEditTextPadding"
                            android:textColor="@color/LoginHintColor"
                            android:textColorHint="@color/LoginHintColor"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_small"
                        android:background="@color/colorGreyDivider" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/et_register_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:drawablePadding="@dimen/padding_4"
                            android:drawableRight="@drawable/ic_dropdown"
                            android:hint="@string/RegisterCity"
                            android:padding="@dimen/RegisterEditTextPadding"
                            android:textColor="@color/LoginHintColor"
                            android:textColorHint="@color/LoginHintColor"
                            android:textCursorDrawable="@null"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_small"
                        android:background="@color/colorGreyDivider" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:gravity="center">

                        <com.bluemortar.customui.CustomButton
                            android:id="@+id/btnSignUp"
                            android:layout_width="72dp"
                            android:layout_height="70dp"
                            android:background="@drawable/round_icon"
                            android:text="@string/RegisterSingUpBtnTextName"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center">


                        <com.bluemortar.customui.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/AlreadyHaveAccount"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:visibility="visible" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_16"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divider_small"
                            android:background="@color/colorPinkDivider" />

                        <com.bluemortar.customui.CustomButton
                            android:id="@+id/btnGoLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:text="@string/LoginBtnText"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_16" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
